<% provide(:title, "Target") %>
<div id="hdr-default-base">
	<%= render 'components/header' %>
</div>
<%= render 'components/sidebar' %>

<div class="pmdb-crumb-base">
   <div class="pcb-wrapper">
      <ol class="pcb-list">
         <li><%= link_to root_path do %>Home<% end %><i>/</i></li>
         <li><%= link_to targets_path do %>Targets<% end %><i>/</i></li>
         <li class="pcb-list-active"><%= @target_name %></li>
      </ol>
   </div>
</div>
<% if @exit_code == 0 %>
<!-- drugs page wrapper -->
<section id="pmdb-prof-container">
   <div id="pmdb-prof-wrapper" class="pmdb-prof-wrapper-padded">
      <div id="count_stat"></div>
      <script type="text/javascript">
            $("#histogramcount_stat").remove()
						$("#buttoncount_stat").remove()
            $(document).ready(makeHistogram(<%= @count_ids %>, "count_stat", "Number of Unique Targets Tested in Each Dataset"))
         </script>

      <table class="table table-bordered" style='table-layout: fixed'>
         <caption>List of all targets in Pharmacodb - currently <%= @targets_count %> in total.</caption>
         <thead>
            <tr>
               <th colspan="2">Target Name</th>
            </tr>
         </thead>
         <tbody>
            <% @targets.each_slice(2) do |target_slice| %>
            <tr>
                <% target_slice.each do |d| %>
                  <td><a href="/targets/<%= d['target_id'] %>" title=""><%= d['target_name'] %></a></td>
                <% end %>
            </tr>
            <% end %>
         </tbody>
      </table>
      <div class="flickr_pagination">
         <%= will_paginate @targets %>
      </div>
   </div>
</section>
<% elsif @exit_code == 1 %>
<!-- target page wrapper -->
<section id="pmdb-prof-container">
	 <%= render 'components/contact_sidebar', :subject => "targets", :title => @target_name %>
   <div id="pmdb-prof-wrapper">
      <div id="pmdb-prof-leftcol">
         <!-- profile card -->
         <div class="ppl-card">
            <a id="pmdb-obj-name" href="/targets/<%= @target_id %>" title=""><h1><%= @target_name %></h1></a>
 <!--            <h3 class="ppl-card-title">Description</h3>
            <p>N/A</p> -->
            <h3 class="ppl-card-title">Synonyms</h3>
            <% if @synonyms == "N/A" %>
            <p><%= @synonyms %></p>
            <% else %>
            <table>
               <thead>
                  <tr>
                     <th>Sources</th>
                     <th>Names Used</th>
                  </tr>
               </thead>
               <tbody>
                  <% @synonyms.each do |s| %>
                  <tr>
                     <td><%= s[0].html_safe %></td>
                     <td><%= s[1] %></td>
                  </tr>
                  <% end %>
               </tbody>
            </table>
            <% end %>
            <h3 class="ppl-card-title">Links</h3>
            <table>
            <tr>
            <td> <b> Genecard: </b></td>  <td> <a href="http://www.genecards.org/cgi-bin/carddisp.pl?gene=<%=@target_name %>"> <%=@target_name %></a></td>
            </tr>
            </table>

         </div>
         <!-- targets stat card -->
         <div class="ppl-card ppl-card-2">
            <h2 class="page-card-title">Compounds tested with target <%= @target_name %></h2>
            <h5 class="page-card-subtitle">
            <% if not @search_drugs %>
               <strong><%= @num_drugs %></strong> compounds have been tested targeting <%= @target_name %>, using data from <strong><%= @numdatasets %></strong> dataset(s).
            <% else %>
               <%= @caption_drugs %>
            <% end %>
            </h5>
            <%= render 'components/drug_search_form', locals: { rest_uri: "/targets/".concat(@target_id) } %>
            <table id="ppl-card2-table">
               <thead>
                  <tr>
                     <th>Compounds</th>
                     <th class="ppl-table-center">Datasets</th>
                     <th class="ppl-table-center"># Experiments</th>
                     <!-- <th class="ppl-table-center">Tissue Type</th> -->
                  </tr>
               </thead>
               <tbody>
                  <% @drugs.each do |c| %>
                  <tr>
                     <td><a href="/drugs/<%= c[3] %>"><%= c[0] %></a></td>
                     <td class="ppl-table-center"><%= c[1].html_safe %></td>
                     <td class="ppl-table-center"><%= c[2] %></td>
										 <!-- <td class="ppl-table-center"><%= c[4] %></td> -->
                  </tr>
                  <% end %>
               </tbody>
            </table>
            <div class="flickr_pagination">
               <%= will_paginate @drugs, :param_name => 'dpage', inner_window: 1, outer_window: 1 %>
            </div>
            <a href="/targets/<%= @target_id %>?download=drug_table"> Download CSV </a>

         </div>
      </div>
      <div id="pmdb-prof-rightcol">
      <% unless @ccounts.empty? || @ccounts.to_set == [0].to_set  %>
         <div class="ppl-card ppl-chart-card">
            <div id="pmdb-cdrug-plot">
            <script type="text/javascript">
                     $("#barPlotpmdb-cdrug-plot").remove()
                     $(document).ready(makeBarPlot(<%= raw @snames %>,<%= @ccounts %>, "", "pmdb-cdrug-plot", "", "Number of compounds tested targeting <%= @target_name %> (per dataset)", "compounds", ""))
                  </script>
         </div>
      <% end %>
      </div>
   </div>
</section>
<% end %>

<%= render 'components/footer' %>
