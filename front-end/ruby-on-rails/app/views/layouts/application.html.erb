<%= spaceless do %>
<!DOCTYPE html>
<html>
	<head>
		<!-- META  -->
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title><%= full_title(yield(:title)) %></title>
		<meta name="author" content="BHKLAB: Alexander Maru">
		<meta name="description" content="Efficiently mine multiple large-scale pharmacogenomic datasets.">
		<!-- FAVICON  -->
		<%= favicon_link_tag 'favicon.png', rel: 'icon' %>
		<!-- SOCIAL DATA  -->
		<meta property="og:title" content="PharmacoDB">
		<meta property="og:description" content="Efficiently mine multiple large-scale pharmacogenomic datasets.">
		<meta property="og:url" content="http://pharmacodb.pmgenomics.ca/">
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="PharmacoDB">
		<meta property="og:image" content="">
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="PharmacoDB">
		<meta name="twitter:description" content="Efficiently mine multiple large-scale pharmacogenomic datasets.">
		<meta name="twitter:creator" content="BHKLAB: Alexander Maru">
		<meta name="twitter:domain" content="http://pharmacodb.pmgenomics.ca/">
		<meta name="twitter:site" content="PharmacoDB">
		<meta name="twitter:image" content="">
		<%= csrf_meta_tags %>
		<!-- STYLESHEETS  -->
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<!-- JAVASCRIPT  -->
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= render 'layouts/shim' %>
		<!-- Google Analytics -->
		<% if Rails.env.development? %>
			<script type="text/javascript">
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

				ga('create', 'UA-102318501-1', 'auto');
			</script>
		<% end %>
	</head>
	<body>
		<%= yield %>
	</body>
</html>
<% end %>
